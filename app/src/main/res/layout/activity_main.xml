<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <EditText
                android:id="@+id/operaciones_pantalla"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="44sp"
                android:gravity="center|right"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:background="@color/transparent">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/resultados_pantalla"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="30sp"
                android:gravity="right|center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/borrar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="⌫"
                android:textSize="40sp"
                android:paddingLeft="12dp">
            </Button>

            <Button
                android:id="@+id/parentesis1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="("
                android:textSize="32sp"
                android:paddingBottom="10sp">
            </Button>

            <Button
                android:id="@+id/parentesis2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text=")"
                android:textSize="32sp"
                android:paddingBottom="10sp">
            </Button>

            <Button
                android:id="@+id/dividir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="÷"
                android:textSize="40sp"
                android:paddingRight="14sp"
                android:paddingBottom="6sp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/siete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="7"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/ocho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="8"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/nueve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="9"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/multiplicar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="x"
                android:textSize="28sp"
                android:paddingRight="10sp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cuatro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="4"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/cinco"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="5"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/seis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="6"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/restar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="—"
                android:textSize="40sp"
                android:paddingRight="10sp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/uno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="1"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/dos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="2"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/division_botones4">
            </Button>

            <Button
                android:id="@+id/tres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="3"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/sumar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="+"
                android:textSize="36sp"
                android:paddingRight="8sp"
                android:paddingBottom="8sp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="0"
                android:textSize="34sp">
            </Button>

            <Button
                android:id="@+id/punto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="."
                android:textSize="40sp"
                android:paddingBottom="25sp">
            </Button>

            <Button
                android:id="@+id/porcentaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="%"
                android:textSize="30sp">
            </Button>

            <Button
                android:id="@+id/igual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="="
                android:textSize="40sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp">
            </Button>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>